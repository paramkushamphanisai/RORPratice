<h1>Edit the Articals</h1>
<%Rails.logger.info("User created: #{@artical.errors.full_messages},, #{@artical.errors.full_messages.any?}")%>
<% if @artical.errors.full_messages.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @artical.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @artical) do |f|%>

<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</p>
<p>
    <%= f.submit %>
</p>

<% end %>
